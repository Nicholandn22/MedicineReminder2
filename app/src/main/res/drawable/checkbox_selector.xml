<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State ketika checkbox dicentang -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF9800"/> <!-- Warna saat dicentang -->
            <corners android:radius="50dp"/> <!-- Membulatkan sudut -->
            <stroke android:width="2dp" android:color="#E0E0E0"/>
        </shape>
    </item>

    <!-- State ketika checkbox tidak dicentang -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5"/> <!-- Warna default -->
            <corners android:radius="50dp"/>
            <stroke android:width="2dp" android:color="#E0E0E0"/>
        </shape>
    </item>

</selector>
